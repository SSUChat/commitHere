<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/main_page_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_page_shape">

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자인터페이스및실습"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/class_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/class_name"
            android:text="(다)"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/class_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_name"
            android:text="(2150528502)"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/class_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보과학관"
            android:layout_below="@id/class_number"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/gap1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/class_building"
            android:layout_alignBottom="@id/class_building"
            android:text="  "/>

        <TextView
            android:id="@+id/class_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/gap1"
            android:layout_alignBottom="@id/class_building"
            android:text="21202"/>

        <TextView
            android:id="@+id/gap2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/class_address"
            android:layout_alignBottom="@id/class_building"
            android:text="   "/>

        <TextView
            android:id="@+id/class_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/gap2"
            android:layout_alignBottom="@id/class_building"
            android:text="  최지웅"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_toRightOf="@id/class_professor"
            android:layout_alignBottom="@id/class_building"
            android:text="교수님"/>

        <TextView
            android:id="@+id/class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="14dp"
            android:text="화 16:00 ~ 17 : 50  금 16:00 ~ 17 : 50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_forward"/>


    </RelativeLayout>

</LinearLayout>